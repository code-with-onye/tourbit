{
  "name": "@tourbit/cli",
  "version": "0.0.4",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": true,
  "license": "MIT",
  "repository": "https://github.com/tourbit/tourbit",
  "homepage": "https://github.com/tourbit/tourbit#readme",
  "description": "CLI tool for building interactive product tours and user onboarding experiences. Create step-by-step guides and in-app walkthroughs for React applications.",
  "keywords": [
    "user-onboarding",
    "product-tours",
    "onboarding-tool",
    "feature-adoption",
    "walkthroughs",
    "in-app-guides",
    "react-tours",
    "user-guides",
    "tutorial-system",
    "product-education"
  ],
  "files": [
    "dist/**",
    "README.md"
  ],
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/global.css -o ./dist/index.css",
    "build": "pnpm build:css && tsup src/index.tsx --format esm,cjs --dts --external react ",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@tourbit/eslint-config": "*",
    "@tourbit/tsconfig": "*",
    "@tourbit/utils": "*",
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.0.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.8",
    "axios": "^1.7.9",
    "framer-motion": "^11.11.9",
    "postcss": "^8.4.47",
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}